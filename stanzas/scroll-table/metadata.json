{
  "@context": {
    "stanza": "http://togostanza.org/resource/stanza#"
  },
  "@id": "scroll-table",
  "stanza:label": "Scroll table",
  "stanza:definition": "Scroll table MetaStanza",
  "stanza:license": "MIT",
  "stanza:author": "DBCLS",
  "stanza:address": "https://github.com/togostanza/metastanza",
  "stanza:contributor": ["PENQE", "Enishi Tech"],
  "stanza:created": "2020-12-09",
  "stanza:updated": "2020-12-09",
  "stanza:parameter": [
    {
      "stanza:key": "data-url",
      "stanza:example": "https://grch38.togovar.org/sparqlist/api/gene_gwas?ep=https%3A%2F%2Ftogovar.biosciencedbc.jp%2Fsparql&hgnc_id=404",
      "stanza:description": "Data source URL",
      "stanza:required": true
    },
    {
      "stanza:key": "data-type",
      "stanza:type": "single-choice",
      "stanza:choice": [
        "json",
        "tsv",
        "csv",
        "sparql-results-json",
        "elasticsearch"
      ],
      "stanza:example": "json",
      "stanza:description": "Data type",
      "stanza:required": true
    },
    {
      "stanza:key": "fixed-columns",
      "stanza:type": "number",
      "stanza:example": 1,
      "stanza:description": "amount of fixed columns",
      "stanza:required": false
    },
    {
      "stanza:key": "page-size",
      "stanza:type": "number",
      "stanza:example": 10,
      "stanza:description": "Page size",
      "stanza:required": true
    },
    {
      "stanza:key": "columns",
      "stanza:example": "[{\"id\":\"variant_and_risk_allele\",\"label\":\"rs# and risk allele\"},{\"id\":\"raf\",\"label\":\"RAF\"},{\"id\":\"p_value\",\"label\":\"P-Value\",\"type\":\"number\"},{\"id\":\"odds_ratio\",\"label\":\"OR\"},{\"id\":\"ci_text\",\"label\":\"CI\"},{\"id\":\"beta\",\"label\":\"Beta\"},{\"id\":\"mapped_trait\",\"label\":\"Trait(s)\",\"escape\":false},{\"id\":\"pubmed_id\",\"label\":\"PubMed ID\",\"link\":\"pubmed_uri\"},{\"id\":\"study_detail\",\"label\":\"Study details\",\"link\":\"study\"},{\"id\":\"initial_sample_size\",\"label\":\"Discovery sample description\"},{\"id\":\"replication_sample_size\",\"label\":\"Replication sample description\"}]",
      "stanza:description": "Columns' options"
    },
    {
      "stanza:key": "togostanza-custom_css_url",
      "stanza:example": "",
      "stanza:description": "Stylesheet(css file) URL to override current style",
      "stanza:required": false
    },
    {
      "stanza:key": "message-not_found",
      "stanza:type": "text",
      "stanza:example": "No data found.",
      "stanza:description": "Message displayed when there are no data"
    },
    {
      "stanza:key": "message-load_error",
      "stanza:type": "text",
      "stanza:example": "Failed to load data. Please try again.",
      "stanza:description": "Message displayed when data loading fails"
    }
  ],
  "stanza:menu-placement": "bottom-right",
  "stanza:style": [
    {
      "stanza:key": "--togostanza-canvas-width",
      "stanza:type": "number",
      "stanza:default": null,
      "stanza:description": "Metastanza width in px (fallback to 100% if not specified)"
    },
    {
      "stanza:key": "--togostanza-canvas-height",
      "stanza:type": "number",
      "stanza:default": 400,
      "stanza:description": "Metastanza height in px (fallback to content height if not specified)"
    },
    {
      "stanza:key": "--togostanza-fonts-font_family",
      "stanza:type": "text",
      "stanza:default": "Helvetica, Arial, sans-serif",
      "stanza:description": "Font family"
    },
    {
      "stanza:key": "--togostanza-fonts-font_size",
      "stanza:type": "number",
      "stanza:default": 12,
      "stanza:description": "Font size in px"
    },
    {
      "stanza:key": "--togostanza-border-color",
      "stanza:type": "color",
      "stanza:default": "#4E5059",
      "stanza:description": "Border color"
    },
    {
      "stanza:key": "--togostanza-border-width",
      "stanza:type": "number",
      "stanza:default": 1,
      "stanza:description": "Border width"
    },
    {
      "stanza:key": "--togostanza-border-horizontal",
      "stanza:type": "boolean",
      "stanza:default": true,
      "stanza:description": "Whether to draw horizontal lines"
    },
    {
      "stanza:key": "--togostanza-border-vertical",
      "stanza:type": "boolean",
      "stanza:default": false,
      "stanza:description": "Whether to draw vertical lines"
    },
    {
      "stanza:key": "--togostanza-table-thead-font_color",
      "stanza:type": "color",
      "stanza:default": "#3c3744",
      "stanza:description": "Font color of table header"
    },
    {
      "stanza:key": "--togostanza-table-thead-background_color",
      "stanza:type": "color",
      "stanza:default": "",
      "stanza:description": "Background color of table header"
    },
    {
      "stanza:key": "--togostanza-tbody-font-color",
      "stanza:type": "color",
      "stanza:default": "#3c3744",
      "stanza:description": "Font color of table body"
    },
    {
      "stanza:key": "--togostanza-table-tbody-odd_background_color",
      "stanza:type": "color",
      "stanza:default": "rgba(255,255,255,0)",
      "stanza:description": "Background color of table body (odd row)"
    },
    {
      "stanza:key": "--togostanza-table-tbody-even_background_color",
      "stanza:type": "color",
      "stanza:default": "rgba(255,255,255,0)",
      "stanza:description": "Background color of table body (even row)"
    },
    {
      "stanza:key": "--togostanza-theme-background_color_body",
      "stanza:type": "color",
      "stanza:default": "#FFFFFF",
      "stanza:description": "Background color"
    }
  ]
}