{
  "@context": {
    "stanza": "http://togostanza.org/resource/stanza#"
  },
  "@id": "text",
  "stanza:label": "Text",
  "stanza:definition": "Text MetaStanza",
  "stanza:license": "MIT",
  "stanza:author": "DBCLS",
  "stanza:address": "https://github.com/togostanza/metastanza",
  "stanza:contributor": ["Enishi Tech"],
  "stanza:created": "2020-12-02",
  "stanza:updated": "2020-12-02",
  "stanza:parameter": [
    {
      "stanza:key": "data-url",
      "stanza:example": "https://raw.githubusercontent.com/togostanza/togostanza-data/refs/heads/main/samples/json/text.md",
      "stanza:description": "Data source URL",
      "stanza:required": true
    },
    {
      "stanza:key": "data-type",
      "stanza:type": "single-choice",
      "stanza:choice": ["text"],
      "stanza:example": "text",
      "stanza:description": "Data type",
      "stanza:required": true
    },
    {
      "stanza:key": "data-mode",
      "stanza:type": "single-choice",
      "stanza:choice": ["text", "markdown"],
      "stanza:example": "markdown",
      "stanza:description": "Mode"
    },
    {
      "stanza:key": "data-highlight_css_url",
      "stanza:example": "https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.11.1/styles/a11y-dark.min.css",
      "stanza:description": "Stylesheet (css file) URL of highlight.js theme (only effective in markdown mode)"
    },
    {
      "stanza:key": "togostanza-custom_css_url",
      "stanza:example": "",
      "stanza:description": "Stylesheet (css file) URL to override current style"
    }
  ],
  "stanza:menu-placement": "bottom-right",
  "stanza:style": [
    {
      "stanza:key": "--togostanza-canvas-width",
      "stanza:type": "number",
      "stanza:default": 800,
      "stanza:description": "Canvas width"
    },
    {
      "stanza:key": "--togostanza-canvas-height",
      "stanza:type": "number",
      "stanza:default": 450,
      "stanza:description": "Canvas height"
    },
    {
      "stanza:key": "--togostanza-canvas-padding",
      "stanza:type": "text",
      "stanza:default": "20px",
      "stanza:description": "Padding of a stanza. CSS padding-like text (10px 10px 10px 10px)"
    },
    {
      "stanza:key": "--togostanza-theme-background_color",
      "stanza:type": "color",
      "stanza:default": "rgba(255,255,255,0)",
      "stanza:description": "Background color"
    },
    {
      "stanza:key": "--togostanza-fonts-font_family",
      "stanza:type": "text",
      "stanza:default": "Helvetica, Arial, sans-serif",
      "stanza:description": "Font family"
    },
    {
      "stanza:key": "--togostanza-fonts-font_color_primary",
      "stanza:type": "color",
      "stanza:default": "#4E5059",
      "stanza:description": "Font color"
    },
    {
      "stanza:key": "--togostanza-fonts-font_size_default",
      "stanza:type": "number",
      "stanza:default": 12,
      "stanza:description": "Font size"
    }
  ]
}
